{
  "name": "comic-tracker",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "devDependencies": {
    "ts-prune": "^0.10.3",
    "concurrently": "^6.2.0"
  },
  "scripts": {
    "start": "docker compose up",
    "start:local": "concurrently \"npm run start:client\" \"npm run start:server\"",
    "start:client": "cd client && npm run dev",
    "start:server": "cd server && npm run dev",
    "build": "docker compose build",
    "down": "docker compose down",
    "find-unused": "node find-unused.cjs"
  }
}
